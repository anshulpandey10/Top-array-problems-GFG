 void segregateElements(int arr[],int n)
    {
        // Your code goes here
    int a[n]={0};
    int z=0;
    for(int i=0;i<n;i++)
    {
        if(arr[i]>=0)
        {
           a[z]=arr[i];
           z++;
        }
    }
    for(int i=0;i<n;i++)
    {
        if(arr[i]<0)
        {
           a[z]=arr[i];
           z++;
        }
    }
    
    for(int i=0;i<n;i++)
    arr[i]=a[i];
        
        
    }
